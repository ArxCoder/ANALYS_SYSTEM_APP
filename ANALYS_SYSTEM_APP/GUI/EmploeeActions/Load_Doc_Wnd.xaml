<Window x:Class="ANALYS_SYSTEM_APP.GUI.EmploeeActions.Load_Doc_Wnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ANALYS_SYSTEM_APP.GUI.EmploeeActions"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Title="ANALYS" Width="1920" Height="1080" MinWidth="800" MinHeight="600" Icon="/Resources/APP_icon.png">

    <Window.Resources>
        <Storyboard x:Key="ScaleDown">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
         To="0.95" Duration="0:0:0.3" />
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
         To="0.95" Duration="0:0:0.3" />
        </Storyboard>

        <Storyboard x:Key="ScaleUp">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
         To="1" Duration="0:0:0.3" />
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
         To="1" Duration="0:0:0.3" />
        </Storyboard>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1">
            <Grid>
                <TextBlock x:Name="Username" FontSize="24" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" TextDecorations="Underline"/>

                <StackPanel Orientation="Vertical" Width="200" Margin="0,10,200,0" HorizontalAlignment="Right">
                    <TextBlock x:Name="CurrentDate" FontSize="24" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="CurrentTime" FontSize="20" HorizontalAlignment="Right"/>
                </StackPanel>

                <Image x:Name="Return" HorizontalAlignment="Right" Margin="0,0,20,0" Cursor="Hand"
        VerticalAlignment="Center" Source="\Resources\return.png" MouseLeftButtonDown="Return_MouseLeftButtonDown">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Image.RenderTransform>

                    <Image.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard Storyboard="{StaticResource ScaleDown}"/>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard Storyboard="{StaticResource ScaleUp}"/>
                        </EventTrigger>
                    </Image.Triggers>
                </Image>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,50,0,0">
            <TextBlock Text="Список загруженных документов" FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <ListView x:Name="Loaded_Docs_Files" Grid.Row="1"
            BorderBrush="Black" BorderThickness="1" Width="500" Height="700">
                <ListView.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </ListView.Resources>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="20" BorderBrush="Black" BorderThickness="1">
                            <StackPanel Margin="5" Orientation="Vertical">
                                <TextBlock Text="{Binding Path=Date}" FontSize="20" HorizontalAlignment="Right" Margin="0,5,0,5" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Path=Name}" FontSize="20" HorizontalAlignment="Left" Margin="0,5,0,5"/>
                                <TextBlock Text="{Binding Path=Document_Status.Name}" FontSize="20" HorizontalAlignment="Left" Margin="0,5,0,5"/>
                                <TextBlock Text="{Binding Path=Document_Type.Name}" FontSize="20" HorizontalAlignment="Left" Margin="0,5,0,5"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Grid.Row="1" Margin="0,50,0,0">
            <TextBlock Text="Загрузка документа" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Наименование" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="New_Doc_Name" Height="30" Width="400" FontSize="20" HorizontalContentAlignment="Left" VerticalContentAlignment="Center">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBlock Text="Тип документа" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,10,0,10"/>
            <ComboBox x:Name="New_Doc_Type" Height="30" DisplayMemberPath="Name"/>

            <TextBlock Text="Источник данных документа" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,10,0,10"/>
            <ComboBox x:Name="New_Doc_Src" Height="30" DisplayMemberPath="Name"/>

            <Button Width="400" Height="35" Content="Загрузить документ" FontSize="24" FontWeight="Bold" 
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,20,0,0"
            x:Name="Load_New_Doc">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
